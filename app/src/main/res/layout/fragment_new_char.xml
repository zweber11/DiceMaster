<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hellwebstudios.zweber.dd.Fragments.Characters.NewCharFrag"
    android:background="@color/colorPrimary"
    android:paddingTop="60dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="New Character"
            android:id="@+id/txtAddEditCharacter"
            android:textColor="@color/color5"
            android:padding="2dp" />

        <!--Char Name-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/textView"
            android:textColor="@color/color5"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtCharName"
            android:layout_gravity="center"
            android:textColor="@color/color5"
            android:background="@drawable/background"
            android:layout_margin="5dp" />

        <!--Class-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class"
            android:id="@+id/textView233"
            android:textColor="@color/color5"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinCharClass"
            android:background="@drawable/background"
            android:layout_margin="5dp" />

        <!--Race-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Race"
            android:id="@+id/textView23"
            android:textColor="@color/color5"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinCharRace"
            android:background="@drawable/background"
            android:layout_margin="5dp" />
    </LinearLayout>

    <!--Cancel/Save buttons-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_gravity="bottom"
        android:layout_margin="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/btnCancelChar"
            android:background="@drawable/background"
            android:textColor="@color/color5"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btnSaveChar"
            android:layout_gravity="end"
            android:background="@drawable/background"
            android:textColor="@color/color5"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

</FrameLayout>
