<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.DashboardFragment"
    android:background="@color/colorPrimary">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">
        <!--1st row-->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <!--1st column-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/background"
                android:layout_margin="2dp"
                android:id="@+id/boxSessions">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:text="Adventures"
                    android:textAllCaps="false"
                    android:textColor="@color/color6"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/ivDash1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/color5"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_adventures" />
            </LinearLayout>
            <!--2nd column-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/background"
                android:layout_margin="2dp"
                android:id="@+id/boxChars">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:text="Characters"
                    android:textAllCaps="false"
                    android:textColor="@color/color6"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/ivDash2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_chars" />
            </LinearLayout>
        </TableRow>
        <!--2nd row-->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <!--1st column-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/background"
                android:layout_margin="2dp"
                android:id="@+id/boxDiceSets">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:text="Dice Sets"
                    android:textAllCaps="false"
                    android:textColor="@color/color6"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/ivDash3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_dice_sets" />
            </LinearLayout>
            <!--2nd column-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/background"
                android:layout_margin="2dp"
                android:id="@+id/boxSettings">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:text="Settings"
                    android:textAllCaps="false"
                    android:textColor="@color/color6"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/ivDash4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_settings" />
            </LinearLayout>
        </TableRow>
        <!--3rd row-->
        <TableRow android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <!--1st column-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/background"
                android:layout_margin="2dp"
                android:id="@+id/boxAbout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:text="About"
                    android:textAllCaps="false"
                    android:textColor="@color/color6"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/ivDash6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_about" />
            </LinearLayout>
            <!--2nd column-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/background"
                android:layout_margin="2dp"
                android:id="@+id/boxHelp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:text="Help"
                    android:textAllCaps="false"
                    android:textColor="@color/color6"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/ivDash7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_help" />
            </LinearLayout>
        </TableRow>

    </TableLayout>

</RelativeLayout>
